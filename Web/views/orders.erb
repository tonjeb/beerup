<h2><%= @title %></h2>
<head>
<meta http-equiv="refresh" content="10">
</head>
<form action="/delivering" method="post" enctype="multipart/form-data">
	<fieldset>
	<legend>Manage orders</legend>
	<table border="0" cellpadding="0" cellspacing="10" class="list">
		<% @orders.each_with_index do |orders,i| %>
		<tr<%= ' class="alt"' if i%2==0 %>>
		<tr>
			<th>Table</th>
			<th>Drink type</th>
			<th>Amount</th>
			<th>Cash?</th>
			<th>Delivered</th>
			<th>Delete</th>
		</tr>
		<tr>
			<td><%= orders.tablenr %></td>
			<td><%= orders.drink.drink_type %></td>
			<td><%= orders.antalld %></td>
			<td><% if orders.pay %>Yes <% else %>No <% end %></td>
			<td><a href="delivering?orderid=<%= orders.id %>">x</a></td>
			<td><a href="delete_order<%= orders.id %>">x</a></td>
		</tr>
	<% end %>

	</table>
	</fieldset>
</form>
